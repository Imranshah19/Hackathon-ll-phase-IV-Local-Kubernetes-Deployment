# =============================================================================
# Environment Variables for Phase 4 Kubernetes Deployment
# =============================================================================
# Copy this file to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database (Neon PostgreSQL - External Cloud)
# -----------------------------------------------------------------------------
# IMPORTANT: Database runs in Neon cloud, NOT in Minikube
# Tables: tasks, conversations, messages, users
NEON_DB_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require
DATABASE_URL=postgresql://username:password@ep-xxx-xxx.us-east-1.aws.neon.tech/dbname?sslmode=require

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
# Auth secret for JWT signing (min 32 characters)
AUTH_SECRET=your-super-secret-auth-key-change-in-production-min-32-chars
JWT_SECRET_KEY=your-super-secret-auth-key-change-in-production-min-32-chars

# Next.js domain key for frontend auth
NEXT_DOMAIN_KEY=your-next-domain-key

# -----------------------------------------------------------------------------
# AI Configuration
# -----------------------------------------------------------------------------
# OpenAI API Key (for AI Chat features)
OPENAI_API_KEY=sk-your-openai-api-key

# OpenAI Model (optional, default: gpt-4o-mini)
OPENAI_MODEL=gpt-4o-mini

# Agent name (optional, default: todo-assistant)
AGENT_NAME=todo-assistant

# -----------------------------------------------------------------------------
# Application
# -----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Environment: development, staging, production
ENVIRONMENT=development

# Base URL for backend API
BASE_URL=http://localhost:8000
